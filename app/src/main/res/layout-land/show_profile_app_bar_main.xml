<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.polito.mad.sharenbook.ShowProfileActivity"
    tools:showIn="@layout/show_profile_app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Search Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimary">

            <com.mancj.materialsearchbar.MaterialSearchBar
                android:id="@+id/searchBar"
                style="@style/MaterialSearchBarLight"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"
                app:mt_hint="@string/search_hint"
                app:mt_maxSuggestionsCount="10"
                app:mt_navIconEnabled="true"
                app:mt_placeholder="Share'nBook"
                app:mt_searchBarColor="@android:color/white"
                app:mt_speechMode="false"
                app:mt_textCursorTint="@color/colorPrimary" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/editbook_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="56dp">

            <!-- external wrapper-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- colored bar -->
                    <ImageView
                        android:id="@+id/editbook_topbar_background"
                        android:layout_width="wrap_content"
                        android:layout_height="220dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/gradient"
                        android:elevation="10dp"/>



                    <!-- user profile picture -->
                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/userPicture"

                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:clickable="true"
                        android:src="@drawable/ic_person_black_135dp"
                        android:tint="@color/darkGrey"
                        app:civ_border_color="@color/lightGrey"
                        app:civ_border_width="1dp"
                        app:civ_shadow="true"
                        app:civ_shadow_color="@color/lightGrey"
                        app:civ_shadow_radius="10"
                        android:elevation="10dp"/>

                    <!-- user full name -->
                    <TextView
                        android:id="@+id/tv_userFullName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/userPicture"
                        android:layout_marginTop="8dp"
                        android:elevation="10dp"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:text="@string/placeholder"
                        android:maxLines="1"
                        android:textStyle="bold"/>

                    <!-- user nick name-->
                    <TextView
                        android:id="@+id/tv_userNickName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tv_userFullName"
                        android:elevation="10dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:text="@string/placeholder"
                        android:textStyle="bold"
                        android:alpha="0.7" />

                    <!-- user rating stars -->
                    <!-- <RatingBar
                        android:id="@+id/userRatingBar"

                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_below="@+id/editbook_topbar_background"

                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@id/userPicture"
                        android:isIndicator="false"
                        android:numStars="5"
                        android:progressBackgroundTint="@color/lightGrey"
                        android:progressTint="@color/colorPrimary"
                        android:rating="3.5"
                        android:stepSize="0.5" /> -->


                    <!-- user rating info-->
                    <!-- <TextView
                        android:id="@+id/tv_userRatingInfo"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_below="@id/editbook_topbar_background"
                        android:layout_marginLeft="8dp"

                        android:layout_marginTop="7dp"
                        android:layout_toRightOf="@+id/userRatingBar"
                        android:text="Feedback: 75,2%"
                        android:textColor="@color/darkGrey" /> -->


                </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/main_profile_info"
                    style="CardViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:padding="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:foreground="?android:attr/selectableItemBackground">


                    <LinearLayout
                        android:id="@+id/wrapper"
                        android:padding="16dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/cv_personal_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:text="@string/personal_info"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"/>

                        <TextView
                            android:id="@+id/tv_userEmailContent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:drawableStart="@drawable/ic_email_black_24dp"
                            android:drawableLeft="@drawable/ic_email_black_24dp"
                            android:drawablePadding="32dp"
                            android:text="@string/placeholder"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tv_userCityContent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:drawableStart="@drawable/ic_place_black_24dp"
                            android:drawableLeft="@drawable/ic_place_black_24dp"
                            android:drawablePadding="32dp"
                            android:text="@string/placeholder"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tv_userBioContent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:drawableStart="@drawable/ic_format_quote_black_24dp"
                            android:drawableLeft="@drawable/ic_format_quote_black_24dp"
                            android:drawablePadding="32dp"
                            android:text="@string/placeholder"
                            android:textSize="14sp"
                            android:maxLines="5" />


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/preferred_categories"
                    style="CardViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:padding="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:foreground="?android:attr/selectableItemBackground">


                    <LinearLayout
                        android:id="@+id/wrapper2"
                        android:padding="16dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_pref_categories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:text="@string/preferred_categories"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"/>

                        <it.polito.mad.sharenbook.views.ExpandableHeightGridView
                            android:id="@+id/gridview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:numColumns="auto_fit"
                            android:verticalSpacing="@dimen/grip_view_spacing"
                            android:horizontalSpacing="@dimen/grip_view_spacing"
                            android:stretchMode="columnWidth"
                            android:gravity="center"
                            android:padding="16dp"
                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:background="@color/darkGrey"
        app:itemIconTint="@drawable/nav_bar_selector"
        app:itemTextColor="@drawable/nav_bar_selector"
        app:itemBackground="@drawable/nav_bar_bg_selector"
        app:menu="@menu/navigation" />

    <!-- Edit Floating Action Button-->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="75dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_create_black_24dp"
        app:backgroundTint="@color/colorPrimary"
        app:layout_anchor="@id/navigation"
        app:layout_anchorGravity="end" />

</android.support.design.widget.CoordinatorLayout>