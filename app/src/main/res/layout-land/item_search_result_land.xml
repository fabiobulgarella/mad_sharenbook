<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_searchresult_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/item_searchresult_cv"
        style="CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="@dimen/card_corner_radius">

        <LinearLayout
            android:id="@+id/wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_searchresult_photo"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <!-- title -->
            <TextView
                android:id="@+id/item_searchresult_title"
                style="@style/item_searchresult_title" />

            <!-- author -->
            <TextView
                android:id="@+id/item_searchresult_author"
                style="@style/item_searchresult_author" />


            <!-- creation time and location info -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_searchresult_rl_info">

                <!-- creation time -->
                <TextView
                    android:id="@+id/item_searchresult_creationTime"
                    style="@style/item_searchresult_creationTime"
                    android:drawableLeft="@drawable/ic_date_range_black_24dp"
                    android:drawableStart="@drawable/ic_date_range_black_24dp"
                    android:drawableTint="@color/colorAccent"
                    android:drawablePadding="2dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

                <!-- location -->
                <TextView
                    android:id="@+id/item_searchresult_location"
                    style="@style/item_searchresult_location"
                    android:drawableLeft="@drawable/ic_place_black_24dp"
                    android:drawableStart="@drawable/ic_place_black_24dp"
                    android:drawableTint="@color/colorAccent"
                    android:drawablePadding="2dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
