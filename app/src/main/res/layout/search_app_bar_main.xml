<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity"
    android:background="@color/colorBackgroundCardContainer">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SearchActivity">

        <!-- Search Bar -->
        <RelativeLayout
            android:id="@+id/sba_searchbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent">

            <com.mancj.materialsearchbar.MaterialSearchBar
                android:id="@+id/sba_searchbar"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:mt_hint="@string/search_hint"
                app:mt_maxSuggestionsCount="5"
                app:mt_navIconEnabled="true"
                app:mt_placeholder="@string/searchbar_placeholder"
                app:mt_searchBarColor="@color/colorPrimary"
                app:mt_searchIconTint="@color/colorPrimary"
                app:mt_textCursorTint="@color/colorAccent" />

            <ImageButton
                android:id="@+id/sba_btn_filter"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="13dp"
                android:background="@drawable/ic_filter_list_black_24dp"
                android:backgroundTint="@color/darkGrey"
                android:layout_alignParentRight="true"
                android:layout_marginRight="13dp" />


        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/search_rv_result"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/search_bottom_nav_bar"
            app:layout_constraintTop_toBottomOf="@+id/sba_searchbox" />

        <!-- navigation bottom bar -->
        <android.support.design.widget.BottomNavigationView
            android:id="@+id/search_bottom_nav_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/darkGrey"
            app:itemBackground="@drawable/nav_bar_bg_selector"
            app:itemIconTint="@drawable/nav_bar_selector"
            app:itemTextColor="@drawable/nav_bar_selector"
            app:menu="@menu/navigation"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <!-- Save Floating Action Button-->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/search_fab_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="75dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/ic_place_black_24dp"
        android:tint="@color/darkGrey"
        app:backgroundTint="@color/colorPrimary"
        app:layout_anchor="@id/search_bottom_nav_bar"
        app:fabSize="normal"
        app:layout_anchorGravity="end" />

</android.support.design.widget.CoordinatorLayout>

