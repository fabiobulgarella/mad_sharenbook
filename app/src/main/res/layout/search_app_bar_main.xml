<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgGrey"
    tools:context=".SearchActivity">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/search_cl_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SearchActivity">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/sba_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.mancj.materialsearchbar.MaterialSearchBar
                    android:id="@+id/sba_searchbar"
                    style="@style/MaterialSearchBarLight"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    app:mt_clearIconTint="@color/white"
                    app:mt_hint="@string/search_hint"
                    app:mt_maxSuggestionsCount="0"
                    app:mt_navIconEnabled="true"
                    app:mt_placeholder="@string/searchbar_placeholder"
                    app:mt_searchIconTint="@color/white"
                    app:mt_speechMode="false"
                    app:mt_textCursorTint="@android:color/darker_gray" />

                <ImageButton
                    android:id="@+id/sba_btn_filter"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_tune_black_24dp"
                    android:backgroundTint="@color/darkGrey"
                    app:layout_constraintBottom_toBottomOf="@+id/sba_searchbar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/sba_searchbar" />

            </android.support.constraint.ConstraintLayout>


        </android.support.design.widget.AppBarLayout>


        <!--fragment container for search results in list or map-->
        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/search_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="10dp"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@id/sba_appbar" />


    </android.support.constraint.ConstraintLayout>

    <!-- Save Floating Action Button-->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/search_fab_changeFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="25dp"
        android:tint="@color/darkGrey"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal"
        app:layout_anchor="@+id/search_cl_wrapper"
        app:layout_anchorGravity="right|bottom" />

</android.support.design.widget.CoordinatorLayout>

